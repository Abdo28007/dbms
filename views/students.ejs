<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/students.css">
    <title>Stuents</title>
</head>

<body>
    <div class="side-menu">
        <div class="brand-name">
            <a href="/home">
            <h1>University Dz</h1>
        </a>
        </div>
        <div class="options">
            
            
            <ul>
                <li class="active"><a href="/home/students"><img src="/images/reading-book (1).png" alt="">&nbsp;<span>Students</span></a></li>
                <li><a href="/home/professors"><img src="/images/teacher2.png" alt="">&nbsp;<span>Teachers</span></a></li>
                <li ><a href="/home/courses"><img src="/images/dashboard (2).png" alt="">&nbsp;<span>Courses</span></a></li>
                <li><a href="/home/departements"><img src="/images/school.png" alt="">&nbsp;<span>Departments</span></a></li>
                <li><a href="/home/groupes"><img src="/images/school.png" alt="">&nbsp;<span>Groupes</span></a></li>
            </ul>
            
            

        </div>
     
    </div>
    <div class="container">
        <div class="header">
            <div class="nav">

                <div class="user">
                    <a href="/home/students/create" class="btn1">Add New</a>
                </div>
            </div>
        </div>
        <div class="text-center text-danger mb-3">
            <% if (message) { %>
              <p><%= message %></p>
            <% } %>
          </div>
        <div class="content">
            
            <div class="content-2">
                <div class="Students">
                    <div class="title">
                        <h2>Students</h2>
                    </div>
                    <% if (students && students.length > 0) { %>
                    <table>
                        <tr>
                            <th>Name</th>
                            <th>group</th>
                            <th>year</th>
                            <th>departement</th>
                            <th>email</th>
                            <th>Profile</th>
                            <th>update</th>
                            <th>delete</th>
                            
                        </tr>
                        <% students.forEach(student => { %>
                            <tr>
                                <td><%= student.student_name %></td>
                                <td><%= student.student_groupe %></td>
                                <td><%= student.student_study_year %></td>
                                <td><%= student.student_department %></td>
                                <td><%= student.student_email %></td>
                                <td><a href="/home/students/<%= student.id %>/profile" class="btn">View profile</a></td>
                                <td><a href="/home/students/<%= student.id %>/update" class="btn">update profile</a></td>
                                <td><a href="/home/students/<%= student.id %>/delete" class="btn">Delete profile</a></td>

                            </tr>
                        <% }); %>

                    </table>
                    <% } else { %>
                        <p>No students found.</p>
                    <% } %>
                </div>
            
            </div>
        </div>
    </div>
</body>

</html>